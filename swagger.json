{
  "openapi": "3.0.0",
  "info": {
    "title": "Restaurant Ordering & Menu Management API",
    "version": "1.0.0",
    "description": "CRUD for restaurants, menuItems, and orders with error handling."
  },
  "servers": [
    {
      "url": "https://restaurant-api-niie.onrender.com",
      "description": "Render (Production)"
    },
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/restaurants": {
      "get": {
        "summary": "Get all restaurants",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a restaurant",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Restaurant" }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad request" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/restaurants/{id}": {
      "get": {
        "summary": "Get one restaurant by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Invalid id" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update a restaurant",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Restaurant" }
            }
          }
        },
        "responses": {
          "204": { "description": "No content" },
          "400": { "description": "Invalid request" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete a restaurant",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "No content" },
          "400": { "description": "Invalid id" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/menuItems": {
      "get": {
        "summary": "Get all menu items",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a menu item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MenuItem" }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad request" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/menuItems/{id}": {
      "get": {
        "summary": "Get one menu item by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Invalid id" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update a menu item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MenuItem" }
            }
          }
        },
        "responses": {
          "204": { "description": "No content" },
          "400": { "description": "Invalid request" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete a menu item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "No content" },
          "400": { "description": "Invalid id" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/orders": {
      "get": {
        "summary": "Get all orders",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create an order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Order" }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad request" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/orders/{id}": {
      "get": {
        "summary": "Get one order by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Invalid id" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update an order",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Order" }
            }
          }
        },
        "responses": {
          "204": { "description": "No content" },
          "400": { "description": "Invalid request" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete an order",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "No content" },
          "400": { "description": "Invalid id" },
          "404": { "description": "Not found" },
          "500": { "description": "Server error" }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Restaurant": {
        "type": "object",
        "required": ["name", "location", "phone", "hours"],
        "properties": {
          "name": { "type": "string", "example": "String" },
          "location": { "type": "string", "example": "String" },
          "phone": { "type": "string", "example": "000-000-0000" },
          "hours": { "type": "string", "example": "00am-00pm" }
        }
      },

      "MenuItem": {
        "type": "object",
        "required": ["name", "description", "price", "category", "restaurantId", "isAvailable", "imageUrl"],
        "properties": {
          "name": { "type": "string", "example": "String" },
          "description": { "type": "string", "example": "String" },
          "price": { "type": "number", "example": 0 },
          "category": { "type": "string", "example": "String" },
          "restaurantId": { "type": "string", "example": "ObjectId" },
          "isAvailable": { "type": "boolean", "example": true },
          "imageUrl": { "type": "string", "example": "https://example.com/image.jpg" }
        }
      },

      "Order": {
        "type": "object",
        "required": ["restaurantId", "items", "status"],
        "properties": {
          "restaurantId": { "type": "string", "example": "ObjectId" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["menuItemId", "quantity", "price"],
              "properties": {
                "menuItemId": { "type": "string", "example": "ObjectId" },
                "quantity": { "type": "number", "example": 1 },
                "price": { "type": "number", "example": 0 }
              }
            }
          },
          "status": { "type": "string", "example": "pending" },
          "notes": { "type": "string", "example": "String" }
        }
      }
    }
  }
}
